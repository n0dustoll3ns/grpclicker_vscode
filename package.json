{
  "name": "grpc-clicker",
  "displayName": "gRPC Clicker",
  "description": "- execute `gRPC` calls from `VSCode`\n- view comlpete proto definition with field, message and service description\n- easily save and switch between proto hosts\n- add metadata to request, enable and disable it with one click",
  "icon": "docs/extension.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.68.0"
  },
  "publisher": "Dancheg97",
  "author": {
    "name": "Dancheg97",
    "email": "dangdancheg@gmail.com",
    "url": "https://github.com/Dancheg97"
  },
  "publishConfig": {},
  "repository": "https://github.com/Dancheg97/grpclicker_vscode",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:hosts",
    "onView:schema",
    "onView:metas",
    "onCommand:hosts.add",
    "onCommand:hosts.remove",
    "onCommand:protos.add",
    "onCommand:protos.remove",
    "onCommand:metas.add",
    "onCommand:metas.remove",
    "onCommand:protos.refresh",
    "onWebviewPanel:callgrpc"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "grpc-clicker",
          "title": "gRPC Clicker",
          "icon": "images/extension.svg"
        }
      ]
    },
    "views": {
      "grpc-clicker": [
        {
          "id": "hosts",
          "name": "gRPC Hosts"
        },
        {
          "id": "protos",
          "name": "Protobuf schemas"
        },
        {
          "id": "metas",
          "name": "Request metadata"
        }
      ]
    },
    "commands": [
      {
        "category": "gRPC Clicker",
        "command": "hosts.add",
        "title": "Add new adress",
        "icon": {
          "dark": "images/dark/plus.svg",
          "light": "images/light/plus.svg"
        }
      },
      {
        "category": "gRPC Clicker",
        "command": "hosts.remove",
        "title": "Remove existing adress",
        "icon": {
          "dark": "images/dark/minus.svg",
          "light": "images/light/minus.svg"
        }
      },
      {
        "category": "gRPC Clicker",
        "command": "hosts.switch",
        "title": "Switch grpc host"
      },
      {
        "category": "gRPC Clicker",
        "command": "metas.switch",
        "title": "Turn on/off value of context metadata"
      },
      {
        "category": "gRPC Clicker",
        "command": "protos.add",
        "title": "Add new proto file",
        "icon": {
          "dark": "images/dark/plus.svg",
          "light": "images/light/plus.svg"
        }
      },
      {
        "category": "gRPC Clicker",
        "command": "protos.remove",
        "title": "Remove existing proto file",
        "icon": {
          "dark": "images/dark/minus.svg",
          "light": "images/light/minus.svg"
        }
      },
      {
        "category": "gRPC Clicker",
        "command": "metas.add",
        "title": "Add new metadata to request",
        "icon": {
          "dark": "images/dark/plus.svg",
          "light": "images/light/plus.svg"
        }
      },
      {
        "category": "gRPC Clicker",
        "command": "metas.remove",
        "title": "Remove existing metadata",
        "icon": {
          "dark": "images/dark/minus.svg",
          "light": "images/light/minus.svg"
        }
      },
      {
        "category": "gRPC Clicker",
        "command": "protos.refresh",
        "title": "Resresh existing proro schemas",
        "icon": {
          "dark": "images/dark/refresh.svg",
          "light": "images/light/refresh.svg"
        }
      },
      {
        "category": "gRPC Clicker",
        "command": "call.trigger",
        "title": "Trigger opening of webview for grpc call"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hosts.add",
          "when": "view == hosts",
          "group": "navigation"
        },
        {
          "command": "hosts.remove",
          "when": "view == hosts",
          "group": "navigation"
        },
        {
          "command": "protos.add",
          "when": "view == protos",
          "group": "navigation"
        },
        {
          "command": "protos.remove",
          "when": "view == protos",
          "group": "navigation"
        },
        {
          "command": "metas.add",
          "when": "view == metas",
          "group": "navigation"
        },
        {
          "command": "metas.remove",
          "when": "view == metas",
          "group": "navigation"
        },
        {
          "command": "protos.refresh",
          "when": "view == protos",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hosts.switch",
          "when": "viewItem == host"
        },
        {
          "command": "call.trigger",
          "when": "viewItem == call"
        },
        {
          "command": "metas.switch",
          "when": "viewItem == meta"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.21",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.4",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
